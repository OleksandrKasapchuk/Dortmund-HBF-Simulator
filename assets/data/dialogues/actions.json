  "ryzhyi_take_money": {
    "type": "composite",
    "actions": [
      { "type": "add_item", "id": "money", "amount": 20 },
      { "type": "set_dialogue", "npc": "ryzhyi", "node": "after" },
      { "type": "complete_event", "id": "ryzhyi_gave_money" }
    ]
  },

  "jason_give_money": {
