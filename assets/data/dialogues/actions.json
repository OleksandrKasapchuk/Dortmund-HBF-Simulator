      { "type": "add_item", "id": "grass", "amount": 1000 },
      { "type": "add_quest", "id": "delivery" },
      { "type": "set_dialogue", "npc": "boss", "node": "after" },
      { "type": "complete_event", "id": "boss_gave_quest" }
    ]
  },

  "boss_claim_reward": {
    "type": "composite",
