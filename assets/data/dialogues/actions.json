  "igo_give_vape": {
    "type": "conditional_trade",
    "from": "joint",
    "to": "vape",
    "fromAmount": 1,
    "toAmount": 1,
    "onSuccess": {
      "type": "composite",
      "actions": [
        { "type": "remove_quest", "id": "igo" },
        { "type": "set_dialogue", "npc": "igo", "node": "thanks" },
        { "type": "complete_event", "id": "igo_gave_vape" },
        {
          "type": "timer",
          "delay": 5.0,
          "action": {
            "type": "set_texture",
            "npcNameKey": "npc.igo.name",
            "texture": "igo2"
          }
        }
      ]
    }
  },

  "give_vape_action": {
    "type": "if_has_item",
    "itemId": "vape",
    "itemNameKey": "item.vape.name",
    "action": {
      "type": "set_dialogue",
      "npc": "talahon2",
      "node": "accept"
    }
  },

  "boss_accept_quest": {
